source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.2'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# ExecJS lets you run JavaScript code from Ruby.
gem 'execjs', '~> 2.0.2'

# Embed the V8 Javascript Interpreter into Ruby
gem 'therubyracer', '~> 0.12.1', platforms: :ruby

# Postgres
gem 'pg', '~> 0.17.1'

# github.com/plataformatec/simple_form
gem 'simple_form', '~> 3.0.1'

# github.com/brainspec/enumerize
gem 'enumerize', '~> 0.7.0'

# github.com/slim-template/slim-rails
gem 'slim-rails', '~> 2.1.0'

# github.com/twbs/bootstrap-sass
gem 'bootstrap-sass', '~> 2.3.2.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development do
  # github.com/charliesome/better_errors
  gem 'better_errors'

  # github.com/banister/binding_of_caller
  gem 'binding_of_caller'
end

group :production do
  # Use Uglifier as compressor for JavaScript assets
  gem 'uglifier', '>= 1.3.0'
end

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.1.2'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]
